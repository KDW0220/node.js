<form name="frm" method="post" action="">
    <table>
            <tr>
                <td class="title" width=100>상품코드</td>
                <td width=300><input type="text" name="code" value="<%=newCode%>"></td>
            </tr>
            
            <tr>
                <td class="title" width=100>상품명</td>
                <td width=300><input type="text" name="name"></td>
            </tr>

            <tr>
                <td class="title" width=100>상품가격</td>
                <td width=300><input type="text" name="price"></td>
            </tr>

            <tr>
                <td class="title" width=100>제조사</td>
                <td width=300><input type="text" name="company"></td>
            </tr>
    </table>
    <div id="buttons">
        <input type="submit" value="저장" class="button">
        <input type="reset" value="취소" class="button">
        <input type="button" value="목록" onclick="location.href='/'" class="button">
    </div>
</form>

<script>
    $(frm).on("submit",function(e){
        e.preventDefault();
        let name=$(frm.name).val();
        let code=$(frm.code).val();
        let price=$(frm.price).val();
        let company=$(frm.company).val();
        if(name==""){
            alert("상품명을 입력하세요!");
            $(frm.name).focus();
        }else if(price==""){
            alert("가격을 입력하세요!");
            $(frm.price).focus();
        }else if(company==""){
            alert("제조사를 입력하세요!");
            $(frm.company).focus();
        }else{
            if(!confirm(`${code}:${name}:${price}:${company}을(를) 저장하실래요?`)) return;
            frm.submit();
        }
    });
</script>